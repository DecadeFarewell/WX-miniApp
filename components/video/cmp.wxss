/* components/video/cmp.wxss */
.container{
  width: 700rpx
}
.video-container{
  padding: 0 5rpx;

}
.video {
  width: 700rpx;
  height: 400rpx;
}
.poster-container{
  width: 700rpx;
  height: 400rpx;
  position: relative;
}
.poster-container .poster{
  width: 100%;
  height: 100%;
}
.poster-container .inner-view{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.poster-container .inner-view .icon_play{
  width: 60rpx;
  height: 60rpx;
}
.poster-container .inner-view .duration{
  color: #fff;
  font-size: 20rpx;
}
.main-title{
  font-size: 40rpx;
  font-weight: 700;
  padding: 20rpx;
}
.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 1334rpx;
  background-color: rgba(0, 0, 0, .5);
}
