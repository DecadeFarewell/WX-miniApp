/* components/circle/cmp.wxss */
.container{
  width: 60rpx;
  height: 60rpx;
  position: relative;
}
.circle{
  width: 100%;
  height: 100%;
  left: 50%;
  margin-left: -50%;
  position: absolute;
  border-radius: 50%;
  background-color: #333;
  animation: run 2s infinite;
  opacity: .6
}
.circle._circle{
  animation-delay: 1s;
}
@keyframes run{
  0%{
    transform: scale(0)
  }
  50%{
    transform: scale(1)

  }100%{
    transform: scale(0)

  }
}