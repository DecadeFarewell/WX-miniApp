/* pages/mark/mark.wxss */
.user-container{
    display: flex;
    flex-direction: column;
    padding: 0rpx 30rpx;
    background-color: #fff;
}
.user-info{
    display: flex;
    justify-content: space-between;
    margin-bottom: 50rpx;
}
.user-info .user-name{
    font-size: 40rpx;
    color: #666;
}
.user-info .usr-avater{
    width: 100rpx;
    height: 100rpx;
}
.usr-avater image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.usr-avater .login{
    padding: 0;
    border: 0;
}
.login .image{
    width: 100%;
    height: 100%;
}
.user-container .share{
    width:50rpx;
    height: 50rpx;
    margin: 30rpx 0;
}
.user-container .share image{
    width: 50rpx;
    height:50rpx;
}